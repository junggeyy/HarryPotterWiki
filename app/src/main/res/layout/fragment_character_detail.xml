<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/character_image_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/a_marvel_character" />

    <TextView
        android:id="@+id/character_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_image_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/character_age_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_name_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/age" />

    <TextView
        android:id="@+id/character_power_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_age_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/power" />

    <TextView
        android:id="@+id/character_planet_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_power_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/planet" />

    <TextView
        android:id="@+id/character_enemy_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_planet_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/enemy" />

    <TextView
        android:id="@+id/character_alias_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_enemy_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/alias" />

    <TextView
        android:id="@+id/character_catchPhrase_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_alias_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp"
        tools:text="@string/catchPhrase" />

</androidx.constraintlayout.widget.ConstraintLayout>